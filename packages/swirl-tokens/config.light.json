{
  "source": ["tokens/*.json", "tokens/light/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "prefix": "s",
      "buildPath": "dist/css/",
      "files": [
        {
          "destination": "styles.custom-properties.css",
          "format": "css/variables-design-token-comments"
        }
      ]
    },
    "flutter": {
      "transformGroup": "flutter",
      "prefix": "",
      "buildPath": "dist/flutter/",
      "files": [
        {
          "className": "SwirlDesignTokens",
          "destination": "styles.dart",
          "format": "flutter/class.dart"
        }
      ]
    },
    "json": {
      "prefix": "s",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "styles.json",
          "format": "json"
        }
      ]
    },
    "less": {
      "transformGroup": "less",
      "prefix": "s",
      "buildPath": "dist/less/",
      "files": [
        {
          "destination": "styles.less",
          "format": "less/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "prefix": "s",
      "buildPath": "dist/scss/",
      "files": [
        {
          "destination": "styles.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
